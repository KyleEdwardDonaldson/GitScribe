{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gitscribe.dev/schemas/plugin-manifest.json",
  "title": "GitScribe Plugin Manifest",
  "description": "Schema for plugin manifest.json files",
  "type": "object",
  "required": [
    "name",
    "version",
    "description",
    "author",
    "main",
    "permissions",
    "gitscribe"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "description": "Display name of the plugin"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9]+)?$",
      "description": "Semantic version (e.g., 1.2.3 or 1.2.3-beta)"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200,
      "description": "Short description of the plugin"
    },
    "author": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "main": {
      "type": "string",
      "description": "Entry point JavaScript file (e.g., index.js)",
      "pattern": "^[a-zA-Z0-9_/-]+\\.js$"
    },
    "permissions": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": [
          "network",
          "filesystem:read",
          "filesystem:write",
          "shell:execute",
          "clipboard",
          "git:operations"
        ]
      },
      "description": "List of permissions required by the plugin"
    },
    "gitscribe": {
      "type": "object",
      "required": ["minVersion"],
      "properties": {
        "minVersion": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Minimum GitScribe version required"
        },
        "maxVersion": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Maximum GitScribe version supported (optional)"
        }
      }
    },
    "category": {
      "type": "string",
      "enum": [
        "productivity",
        "integrations",
        "security",
        "themes",
        "workflows",
        "utilities"
      ],
      "description": "Plugin category for marketplace"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "maxItems": 10,
      "description": "Tags for search and categorization"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "maxItems": 20,
      "description": "Keywords for search optimization"
    },
    "repository": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["git"]
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL to source code repository (e.g., GitHub)"
        }
      }
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Plugin homepage or documentation URL"
    },
    "license": {
      "type": "string",
      "description": "SPDX license identifier (e.g., MIT, Apache-2.0)"
    },
    "icon": {
      "type": "string",
      "description": "Path to plugin icon (256x256 PNG)",
      "pattern": "^[a-zA-Z0-9_/-]+\\.png$"
    },
    "engines": {
      "type": "object",
      "properties": {
        "node": {
          "type": "string",
          "description": "Supported Node.js version range"
        }
      }
    }
  }
}
